<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.recetas.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.recetas.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragment3"
        android:name="com.example.recetas.fragment3"
        android:label="fragment_fragment3"
        tools:layout="@layout/fragment_fragment3" />
    <fragment
        android:id="@+id/fragment4"
        android:name="com.example.recetas.fragment4"
        android:label="fragment_fragment4"
        tools:layout="@layout/fragment_fragment4" />
    <fragment
        android:id="@+id/fragment5"
        android:name="com.example.recetas.fragment5"
        android:label="fragment_fragment5"
        tools:layout="@layout/fragment_fragment5" >
        <action
            android:id="@+id/action_fragment5_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragment6"
        android:name="com.example.recetas.fragment6"
        android:label="fragment_fragment6"
        tools:layout="@layout/fragment_fragment6" >
        <action
            android:id="@+id/action_fragment6_to_fragment4"
            app:destination="@id/fragment4" />
    </fragment>
    <fragment
        android:id="@+id/fragment7"
        android:name="com.example.recetas.fragment7"
        android:label="fragment_fragment7"
        tools:layout="@layout/fragment_fragment7" >
        <action
            android:id="@+id/action_fragment7_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragment8"
        android:name="com.example.recetas.fragment8"
        android:label="fragment_fragment8"
        tools:layout="@layout/fragment_fragment8" >
        <action
            android:id="@+id/action_fragment8_to_fragment3"
            app:destination="@id/fragment3" />
    </fragment>
</navigation>